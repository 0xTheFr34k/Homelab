{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "prTitle": "update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "This PR updates {{depName}} from `{{currentVersion}}` to `{{newVersion}}`.\n\n{{{changelogs}}}\n\n{{{controls}}}",
  "ignoreTests": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "customManagers": [
{
  "customType": "regex",
  "description": "Update any HelmRelease chart with inline repo URL",
  "fileMatch": [".*\\.ya?ml$"],
"matchStrings": [
  "chart:\\s*\\n\\s*spec:\\s*\\n\\s*chart:\\s*(?<depName>[a-zA-Z0-9._-]+)(?:(?!version).)*?#\\s*repo:\\s*(?<registryUrl>https?://[^\\s]+).*?version:\\s*(?<currentValue>[0-9a-zA-Z._-]+)"
],
  "datasourceTemplate": "helm",
  "depNameTemplate": "{{depName}}",
  "registryUrlTemplate": "{{registryUrl}}"
},
    {
      "customType": "regex",
      "description": "Update container image tags in YAML",
      "fileMatch": [
        ".*\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>.*?):(?<currentValue>[a-zA-Z0-9._-]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "renovate"
    ]
  }
}

