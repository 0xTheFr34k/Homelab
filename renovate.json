{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "prTitle": "update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "This PR updates {{depName}} from `{{currentVersion}}` to `{{newVersion}}`.\n\n{{{changelogs}}}\n\n{{{controls}}}",
  "ignoreTests": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract Helm repositories from Flux HelmRepository CRDs",
      "fileMatch": [
        "flux/repositories/helm/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "kind:\\s*HelmRepository[\\s\\S]*?metadata:\\s*\\n[\\s\\S]*?name:\\s*(?<id>[a-zA-Z0-9._-]+)[\\s\\S]*?url:\\s*(?<url>https?://[^\\s]+)"
      ],
      "datasourceTemplate": "helm-repository",
      "depNameTemplate": "{{id}}",
      "currentValueTemplate": "0.0.0",
      "registryUrlTemplate": "{{url}}"
    },
    {
      "customType": "regex",
      "description": "Update HelmRelease chart versions (FluxCD)",
      "fileMatch": [
        "apps/.*/app/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "chart:\\s*\\n\\s*spec:\\s*\\n\\s*chart:\\s*(?<depName>[a-zA-Z0-9._-]+)[\\s\\S]*?sourceRef:[\\s\\S]*?name:\\s*(?<registryUrl>[a-zA-Z0-9._-]+)[\\s\\S]*?version:\\s*(?<currentValue>[0-9a-zA-Z._-]+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{depName}}",
      "registryUrlTemplate": "{{registryUrl}}"
    },
    {
      "customType": "regex",
      "description": "Update container image tags in YAML",
      "fileMatch": [
        ".*\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>.*?):(?<currentValue>[a-zA-Z0-9._-]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "renovate"
    ]
  }
}

